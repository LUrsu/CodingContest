@model CC.Web.Models.Problem.ProblemViewModel

<script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<div>
    @using(Html.BeginForm("Create", "Person", FormMethod.Post))
    {
        <fieldset>
            @Html.HiddenFor(m => m.CompetitionId, Model.CompetitionId)
            <label>Name</label><br/>
            @Html.TextBoxFor(m => m.Name)<br/>
            <label>ShortName</label><br/>
            @Html.TextBoxFor(m => m.ShortName)<br/>
            <label>Discription</label><br/>
            @Html.TextBoxFor(m => m.Discription)<br/>
            <label>Example input</label><br/>
            @Html.TextBoxFor(m => m.ExampleInput)<br/>
            <label>Example output</label><br/>
            @Html.TextBoxFor(m => m.ExampleOutput)<br/>
            <label>Expected output</label><br/>
            @Html.TextBoxFor(m => m.ExpectedOutput)<br/>
            <input type="submit" value="Save"/>
        </fieldset>
    }
</div>