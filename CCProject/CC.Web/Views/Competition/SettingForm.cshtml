@model CC.Web.Models.Setting.SettingViewModel
           
<link href="@Url.Content("~/Content/themes/base/jquery.ui.datepicker.css")" rel="stylesheet" type="text/css"/>
<link href="@Url.Content("~/Content/themes/DateTimePicker.css")" rel="stylesheet" type="text/css"/>
<script src="@Url.Content("~/Scripts/jquery-ui-sliderAccess.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery-ui-timepicker-addon.js")" type="text/javascript"></script>

<div>
    @using (Html.BeginForm("CreateSetting", "Competition", FormMethod.Post))
    {
        @Html.HiddenFor(m => m.CompetitionId, Model.CompetitionId)
        <text>Start time</text><br />
        <input type="text" name="startTime" class="ui-timepicker-div" id="startTime"/><br />
        <text>End Time</text><br />
        <input type="text" name="endTime" class="ui-timepicker-div" id="endTime"/><br/>
        <label>Pentalty amount</label><br />
        @Html.EditorFor(m => m.PentaltyAmount)<br/>
        <label>Submission time limit</label><br />
        @Html.EditorFor(m => m.SubmissionTimeLimit)<br/>
        <input type="submit" value="Save"/>
    }
</div>
<script language="javascript" type="text/javascript">
    $("#startTime").datetimepicker({ ampm: true });
</script>
<script language="javascript" type="text/javascript">
    $("#endTime").datetimepicker({ ampm: true });
</script>
