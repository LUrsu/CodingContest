@model IEnumerable<CC.Domain.Entities.Problem>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            Name
        </th>
        <th>
            Discription
        </th>
        <th>
            ShortName
        </th>
        <th>
            ExampleInput
        </th>
        <th>
            ExampleOutput
        </th>
        <th>
            ExpectedOutput
        </th>
        <th>
            Competition
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Discription)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ShortName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ExampleInput)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ExampleOutput)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ExpectedOutput)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Competition.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
