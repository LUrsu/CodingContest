@model CC.Web.Models.Problem.ProblemViewModel
<h2>@Model.Name</h2>
<div>
    <b>Accepted File: </b>@Model.ShortName<b></b>.java <b>, </b>@Model.ShortName<b></b>.cs
    <b>, </b>@Model.ShortName<b></b>.c <b>, </b>@Model.ShortName<b></b>.cpp
    <br />
    <b>File Input: </b>@Model.ShortName<b></b>.in
    <br />
    <b>File Output: </b>@Model.ShortName<b></b>.out
</div>
@Html.Action("DisplayAllSolutionsPartial", "Solution", new { model = Model })<br />

@if (Model.Competition.Setting.StartTime < DateTime.Now && Model.Competition.Setting.EndTime > DateTime.Now)
{
    @Html.Action("UploadSolutionPartial", "Solution", new { model = Model })
}
<div>
    <h4>
        Problem Description:</h4>
    @Model.Description
</div>
<div>
    <h4>
        Example Input:</h4>
    <span style="white-space: pre-line">@Model.ExampleInput</span>
    <br />
    <h4>
        Example Output:</h4>
    <span style="white-space: pre-line">@Model.ExampleOutput</span>
</div>
